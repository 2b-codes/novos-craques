.loading
	width 100%
	height 100vh
	position fixed
	background-color: rgba(#000, .7)
	z-index 100
	&.-hidden
		display none
	> .center
		position absolute
		margin auto
		bottom 0
		right 0
		left 0
		top 0
		width 100px
		height 150px
		>.icon
			animation infiniteRotate 1s infinite
			width 60px
			height 60px
			background-color: #FFF
			border-radius 60px
			box-shadow 0px 0px 41px 10px black inset 
					
		@-webkit-keyframes infiniteRotate {
			from {
				transform: rotateZ(0deg)
			}
			to {
				transform: rotateZ(360deg)
			}
		}
		>.loading-legend
			color #FFF
			display block
			letter-spacing 1em
			transform: translateX(-96px)
