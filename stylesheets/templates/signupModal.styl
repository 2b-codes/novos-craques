.aqui
	>td 
		padding 5px
		border 1px solid
		
.signup-modal
	.signup-modal-body
		.body-main
			padding 0 30px
			max-height 440px
			overflow-y auto
			.subtitle-page
				font-size 1.2em
				text-align center
				font-weight 400
				margin-top 10px
				
			.input-group
				margin-top 10px
				margin-bottom 10px
				>.input-group-children
					margin-top 5px
					input
						height 40px
						font-size 1em
						font-weight 300
					.listOptions
						z-index 5
						max-height 100px
						overflow auto
		.paginator
			font-size .9em
			padding 0 30px
			.icon
				height 30px
				width 30px
				
	@media screen and (max-width:992px)
		.signup-modal-body
			overflow-y hidden
			height 100%
			.body-main
				max-height calc(100% - 95px)
				overflow-y auto
				>.personal
				>.additional
					flexDirection("column")
					flexAC("center")
					flexJC("space-between")
					flexAI("center")
					width 100%
					height 100%
					.input-group
						width 100%
					
				.subtitle-page
					font-size 1.2em
					text-align center
					font-weight 400
					margin-top 10px
					margin-bottom 10px
					
				.input-group
					margin-top 10px
					margin-bottom 10px
					>.input-group-children
						margin-top 5px
						input
							height 40px
							font-size 1em
							font-weight 300
			.paginator
				height 50px
				font-size .8em
				.container-prev
					transform translateX(-25px)
				.container-next
					transform translateX(25px)
				.icon
					height 30px
					width 30px