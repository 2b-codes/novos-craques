section.page-home
	overflow-x hidden
	>.page-home-nav-bar
		height 150px
		width 100%
		background-color: transparent
		position absolute
		padding 0 30px
		>img
			height 130px
		>.home-signup-action-button
			display inline-block
			float right
			background-color $orange
			color #FFF
			font-weight 400
			border none
			border-radius 0 0 4px 4px
			>.icon
				height 20px
				width 15px
				margin auto
				margin-right 5px
				vertical-align middle
				fill #FFF
				stroke #FFF
				>*
					fill #FFF
					stroke #FFF
	>.home-template
		background-color: #000
		.basic-information
			>.home-title
				font-weight 600
				font-size 2.2em
	>.container
		padding 0 80px
		@media screen and (max-width:992px)
			padding 0
		
		