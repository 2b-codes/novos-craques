.wrapper-modal
	position fixed
	width 100%
	height 100vh
	background-color rgba(black, .6)
	z-index 100
	&.closing
		fade("out", 0.3s)

	> .modal 
		position relative
		margin auto
		top: 50%
		transform: translateY(-50%) 
		width 420px
		max-height 90vh
		max-width 420px
		background-color white
		z-index 101
		fade("in", .3s)
		shadow()
		
		> .header
			padding 30px
			position relative
			
			> .text.--title
				font-size 1em
				color $light-black
				
			> .close
				position absolute
				top 20px
				right 20px
				cursor pointer
				>.icon
					width 25px
					height 25px
				
				&.--hide
					display none
		
		> .main
			position relative
			padding 0 30px 30px 30px
			max-height calc(90vh - 80px)
			overflow-y auto
			scroll($dark-grey)
	
	&.--hide
		display none

	&.--error
		> .modal
			background-color $error

	&.--red
		> .modal 
			background-color $error
			
	&.--green
		> .modal
			background-color $green
			color #FFF