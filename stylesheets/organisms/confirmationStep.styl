.confirmation-step
	width 100%
	>.header
		tr
			th
				text-transform uppercase
				font-size 1em
				font-weight 600
				padding-bottom 10px
				padding-top 10px
				&:nth-child(even) 
					text-align  left
					padding-left 10px
				&:nth-child(odd) 
					text-align right
					padding-right 10px
	>.body
		tr
			cursor pointer
			&:nth-child(even) 
				background-color rgba(#D5D5D5, .5)
			&:hover
				background-color #D5D5D5
					
			
			td
				padding 3px 0
				&:nth-child(even) 
					text-align  left
					border-left 1px solid $black
					padding-left 5px
				&:nth-child(odd) 
					text-align right
					font-weight 400
					padding-right 5px
				
