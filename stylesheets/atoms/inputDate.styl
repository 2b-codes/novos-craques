.input-date
.input-date&:focus 
	padding 0 5px
	border 1px solid $black
	width 100%
	height 50px
	border-radius 3px
	flexDirection()
	&.-noInput
		height auto

	>.icon
		width 46px
		height 46px
		position relative
		margin-top auto
		margin-bottom auto
	>.rdt
		width calc(100% - 46px)
		height 44px
		margin-top auto
		>input
			width 100%
			height 44px
			background-color transparent
		>.rdtPicker
			margin 0 0 0 -5px 
			width calc(100% + 90px)
			>.rdtDays
				.rdtDay
					height 38px
	>.rdtPicker
		margin 0 0 0 -5px 
		width calc(100% + 90px)
		>.rdtDays
			.rdtDay
				height 38px
	