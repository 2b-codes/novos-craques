.input-date
.input-date&:focus 
	padding 0 5px
	border 1px solid $black
	width 100%
	height 50px
	border-radius 3px
	flexDirection()
	&.--noInput
		height auto
	>.icon
		width 70px
	>.rdt
		width 100%
		height 48px
		>input
			width 100%
			height 48px
		>.rdtPicker
			margin 0 0 0 -5px 
			width calc(100% + 70px)
			>.rdtDays
				.rdtDay
					height 38px
	>.rdtPicker
		margin 0 0 0 -5px 
		width calc(100% + 70px)
		>.rdtDays
			.rdtDay
				height 38px
	