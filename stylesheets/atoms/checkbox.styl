.checkbox
	>.checkbox-input
		vertical-align middle
		display inline
		> input[type=checkbox]
			&:not(:checked)
			&:checked
				display none
		
		> label
			position relative
			cursor pointer
			display inline-block
			width 12px
			height 12px
			border 1px solid $black
			background #FFF
			border-radius 0px

		> input[type=checkbox]:not(:checked) + label
		> input[type=checkbox]:checked + label
			&:before
				content ''
				position absolute

		> input[type=checkbox]:not(:checked) + label
		> input[type=checkbox]:checked + label
			&:after
				content 'âœ”'
				position absolute
				top -1px
				left -1px
				bottom 0
				right 0
				margin auto
				font-size 14px
				color $black
				transition all .11s
		
		> input[type=checkbox]:not(:checked) + label
			&:after
				opacity 0
				transform scale(1)
		> input[type=checkbox]:checked + label
			&:after
				opacity 1
				transform scale(1)
		> input[type=checkbox]:checked + label
				background #FFF
	>.label
		margin-left 5px