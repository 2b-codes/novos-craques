.dropdown
	position relative
	.select
		flexDirection()
		flexAI("center")
		border 1px solid $black
		padding 5px
		width 100%
		height 50px
		border-radius 5px
		&:active
		&:focus
			border 1px solid $blue
			.icon
				>*
					fill $blue
					stroke $blue
		.icon
			height 20px
			width 30px
		>input
			width 100%
			height 48px
			
			
	.listOptions
		position absolute
		width 100%
		margin -10px 0 0 0
		background-color  #FFF
		.list
			max-height 200px
			border-radius 5px
			border .5px solid rgba($black, .2)
			overflow-y auto
			overflow-x hidden
			box-shadow 6px 6px 25px rgba($orange, .6)
			-webkit-box-shadow: 6px 6px 25px rgba($orange, .6)
			-moz-box-shadow: 6px 6px 25px rgba($orange, .6)
			.option
				width 100%
				font-size 1em
				color $black
				border-bottom 1px solid rgba($black, .1)
				margin 0 10px
				padding 10px
				&:hover
				&.selected
					background-color: $orange
					color #FFF
					font-weight 400
					// box-shadow 0px 0px 14px rgba($orange, .5) inset
					// -webkit-box-shadow: 0px 0px 14px rgba($orange, .5) inset
					// -moz-box-shadow: 0px 0px 14px rgba($orange, .5) inset
					padding 10px 20px
					margin 0
					cursor pointer