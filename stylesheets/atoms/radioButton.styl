.radio-button
	>.radio-button-input
		vertical-align middle
		display inline
		> input[type=radio]
			&:not(:checked)
			&:checked
				display none
		
		> label
			position relative
			cursor pointer
			display inline-block
			width 15px
			height 15px
			border 1px solid #000
			background #FFF
			border-radius 50px

		> input[type=radio]:not(:checked) + label
		> input[type=radio]:checked + label
			&:before
				content ''
				position absolute

		> input[type=radio]:not(:checked) + label
		> input[type=radio]:checked + label
			&:after
				content 'âœ”'
				position absolute
				top 0px
				left 0px
				bottom 0
				right 0
				margin auto
				font-size 14px
				color #000
				transition all .11s
		
		> input[type=radio]:not(:checked) + label
			&:after
				opacity 0
				transform scale(1)
		> input[type=radio]:checked + label
			&:after
				opacity 1
				transform scale(1)
		> input[type=radio]:checked + label
				background #FFF
	>.label
		margin-left 5px